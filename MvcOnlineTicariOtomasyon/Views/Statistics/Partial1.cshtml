@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.ClassGroup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Department Personnel </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Department</th>
                    <th>Progress</th>
                    <th style="width: 40px">Count</th>
                </tr>
            </thead>
            <tbody>
                @{ int no = 0; }
                @foreach (var x in Model)
                {
                    <tr>

                        <td>@{no++;} @no</td>
                        <td>@x.Department </td>
                        <td>

                            @if (x.Count >= 1 && x.Count <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar bg-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Count >= 4 && x.Count <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Count >= 7)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Count >= 1 && x.Count <= 3)
                            {
                                <span class="badge bg-danger">@x.Count</span>
                            }
                            @if (x.Count >= 4 && x.Count <= 6)
                            {
                                <span class="badge bg-warning">@x.Count</span>
                            }
                            @if (x.Count >= 7)
                            {
                                <span class="badge bg-success">@x.Count</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
