@using MvcOnlineTicariOtomasyon.Models.Classes;
@model List<MvcOnlineTicariOtomasyon.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th> Id </th>
        <th> Name </th>
        <th> Brand </th>
        <th> Stock </th>
        <th> Price </th>
        <th> Sale price </th>
        <th> Status </th>
        <th> Category Id </th>
        <th> Visual </th>
        <th>  </th>
        <th>  </th>

    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td> @p.ProductID</td>
            <td> @p.ProductName</td>
            <td> @p.Brand</td>
            <td> @p.Stock</td>
            <td> @p.Price</td>
            <td> @p.SalePrice</td>
            <td> @p.Status</td>
            <td> @p.Category.CategoryName</td>
            <td> @p.ProductVisual</td>
            <td>
                <a href="/Product/ProductDelete/@p.ProductID" class="btn btn-danger"> Delete </a>
            </td>
            <td>
                <a href="/Product/ProductList/@p.ProductID" class="btn btn-success"> Update </a>
            </td>
        </tr>
    }
</table>

<a href="/Product/NewProduct/" class="btn btn-info"> Add Product </a>


