@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th> ID </th>
        <th> Department Name </th>
        <th>  </th>
        <th>  </th>
        <th>  </th>


    </tr>
    @foreach (var c in Model)
    {
        //veri sıralama döngüsü.
        //bir döngü oluşturdum. bu döngü c adında bir değişken içeriyor. c modele bağlı ,
        //model kategoriye bağlı ,kategori de controller tarafındaki methoda bağlı

        <tr>
            <td>
                @c.DepartmentID
            </td>
            <td>
                @c.DepartmentName
            </td>
            <td> <a href="/Department/DepartmentDelete/@c.DepartmentID" class="btn btn-danger"> Delete </a></td>
            <td> <a href="/Department/DepartmentBring/@c.DepartmentID" class="btn btn-success"> Update </a></td>
            <td> <a href="/Department/DepartmentDetail/@c.DepartmentID" class="btn btn-succses" style="background-color:hotpink; color:white"> Detail </a></td>
        </tr>
    }
</table>
<a href="/Department/DepartmentAdd" class="btn btn-info"> Add Department  </a>

