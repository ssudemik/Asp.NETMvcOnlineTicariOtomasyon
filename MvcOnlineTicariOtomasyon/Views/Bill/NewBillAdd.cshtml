@model MvcOnlineTicariOtomasyon.Models.Classes.BillCategory

@{
    ViewBag.Title = "NewBillAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>New Bill Add </h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Explanation)
    @Html.TextBoxFor(x => x.Explanation, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Sum)
    @Html.TextBoxFor(x => x.Sum, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BillsID)
    @Html.TextBoxFor(x => x.BillsID, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary"> Save </button>
</form>
