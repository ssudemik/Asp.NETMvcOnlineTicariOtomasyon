@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<BillCategory>
@{
    ViewBag.Title = "BillDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Bill Detail</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> </li>
</ol>

<br />
<table class="table table-hover">
    <tr>
        <th> ID </th>
        <th> Explanation </th>
        <th> Amount </th>
        <th> Unit Price </th>
        <th> Price </th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td> @x.BillCategoryID </td>
            <td> @x.Explanation </td>
            <td> @x.Amount </td>
            <td> @x.UnitPrice </td>
            <td> @x.Sum </td>
        </tr>
    }
</table>

 <a href="/Bill/NewBillAdd/" class="btn btn-default" style="background-color:chartreuse"> New Bill Add </a> 
