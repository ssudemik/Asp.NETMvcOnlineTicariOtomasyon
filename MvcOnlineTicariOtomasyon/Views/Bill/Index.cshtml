@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Bill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2> Bills </h2>
<br />

<table id="tbl1" class="table table-striped" style="margin-top:20px">
    <thead class="thead-dark">
        <tr>
            <th> ID </th>
            <th> Bills Serial No  </th>
            <th> Bills No </th>
            <th> Tax Office </th>
            <th> Date </th>
            <th> Time </th>
            <th> Deliverer </th>
            <th> Receiver </th>
            <th> Sum </th>
            <th>  </th>
            <th>  </th>
        </tr>
    </thead>
    @foreach (var c in Model)
     {
        <tr>
            <td>@c.BillsID </td>
            <td>@c.BillsSerialNo </td>
            <td>@c.BillsNo </td>
            <td>@c.TaxOffice </td>
            <td>@c.Date </td>
            <td>@c.Time </td>
            <td>@c.Deliverer </td>
            <td>@c.Receiver </td>
            <td>@c.Sum </td>
            <td> <a href="/Bill/BillBring/@c.BillsID" class="btn btn-success"> Update </a></td>
            <td> <a href="/Bill/BillDetail/@c.BillsID" class="btn btn-succses" style="background-color:hotpink; color:white"> Detail</a></td>
        </tr>
     }
</table>
<a href="/Bill/BillAdd" class="btn btn-info" style="color:white"> New Bill </a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
