@model MvcOnlineTicariOtomasyon.Models.Classes.Employee
@{
    ViewBag.Title = "EmployeeAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>New Employee</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.EmployeeName)
    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
    <br />
    @Html.LabelFor(x => x.EmployeeSurname)
    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.EmployeeSurname, "", new { @class = "text-danger" })
    <br />
    @Html.LabelFor(x => x.EmployeeVisual)
    @Html.TextBoxFor(x => x.EmployeeVisual, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Department)
    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.vl1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary"> Save </button>
</form>
